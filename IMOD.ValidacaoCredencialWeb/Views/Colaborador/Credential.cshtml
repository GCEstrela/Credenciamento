@model IMOD.ValidacaoCredencialWeb.Models.CredencialViewModel
@{
    ViewBag.Title = "Credencial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="table-wrapper col-sm-12 col-md-12 col-lg-12 col-xs-12">
    <fieldset>
        <div class="table-title">
            <div class="row">
                <div>
                    <h2><b>Credencial</b></h2>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
            <img src="@ViewBag.ImgOperador" height="90" width="150">
        </div>
        <div>
            <dl class="dl-horizontal">
                <dt>
                </dt>
                <dd>
                    <div class="col-sm-6">
                        <img src="@Html.DisplayFor(model => model.FotoFormatada)" height="160" width="150" class="img-fluid">
                    </div>
                    <div class="col-sm-6 text-center">
                        <div class="col-sm-3 text-center">
                            &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;<img src="~/Images/operadorEmbarque.png" @ViewBag.ocultaOperaEmbarque/>
                            &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;<img src="~/Images/ccam.png" @ViewBag.ocultaCcam/>
                        </div>
                        <div class="col-sm-3 text-center">
                            &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;<img src="~/Images/operadorBagagem.png" @ViewBag.ocultaBagagem />
                            &nbsp;&nbsp;<font size="19"><b>@Html.DisplayFor(model => model.CNHCategoria)</b></font>
                        </div>
                    </div>
            </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Validade)
        </dt>
        <dd>
            <font size="5">
                <b>
                    @Html.DisplayFor(model => model.ValidadeFormatada)
                </b>
            </font>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ColaboradorNome)
        </dt>
        <dd>
            <font size="3">
                <b>
                    @Html.DisplayFor(model => model.ColaboradorNome)
                </b>
            </font>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cargo)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cargo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.EmpresaNome)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmpresaNome)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; @Html.DisplayFor(model => model.TerceirizadaNome)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Motorista)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Motorista)
        </dd>
        <dt>
            @Html.Label("Acessos")
        </dt>
        <dd>
            <font size="5">
                <b>
                    @Html.DisplayFor(model => model.Identificacao1) &nbsp;&nbsp;&nbsp; @Html.DisplayFor(model => model.Identificacao2)
                </b>
            </font>
        </dd>
        </dl>
    </div>
        <div class="@ViewBag.ClasseAlerta text-center text">
            <font size="5" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">
                <b>
                    <span class="@ViewBag.ClasseIcone"></span>&nbsp;&nbsp;&nbsp;@ViewBag.ClasseTexto
                </b>
            </font>
        </div>
    </fieldset>
</div>
