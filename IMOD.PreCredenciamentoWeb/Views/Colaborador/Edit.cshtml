                        $('#divContrato').append(html);
                        $("#ddlContrato").val('');
                        $("#chkBagagem").val(false);
                        $("#chkPonteEmbarque").attr('checked', false);
                        $("#chkCcam").attr('checked', false);
                        $("#txtVigencia").val('');
                        $("#txtCargo").val('');
                        console.log(result);

                    },
