@model IEnumerable<IMOD.PreCredenciamentoWeb.Models.ColaboradorViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h3>Colaboradores</h3>
<p></p>
<p></p>
<div>
    <a href='@Url.Action("Create", "Colaborador")'>
        @Html.ActionLink("Novo", "Create", "Colaborador", new { @class = "btn btn-primary" })
    </a>
    @*<img src="~/images/Colaboradores.png" width="60" height="50" class="img-rounded img-responsive" />
        @Html.ActionLink("Novo", "Create", "Colaborador", new { @class = "btn btn-primary" })*@
</div>

<div class="col-md-12">
    <br />
    <table class="table table-hover table-responsive table-dark" id="tbVeiculo">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cpf)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apelido)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Foto)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.TelefoneFixo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TelefoneCelular)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cpf)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apelido)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Foto)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefoneFixo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefoneCelular)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="col-lg-1">
                        <a href='@Url.Action("Edit", "Colaborador", new { id = item.ColaboradorId })'>
                            <img src="~/images/edit.png" />
                        </a>
                        |
                        <a href='@Url.Action("Details", "Colaborador", new { id = item.ColaboradorId })'>
                            @*<img src="~/images/lupa.png" />*@
                            <span class="glyphicon glyphicon-search"></span>
                        </a>
                        &nbsp;|
                        <a href='@Url.Action("Delete", "Colaborador", new { id = item.ColaboradorId })'>
                            <img src="~/images/remove.png" />
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
