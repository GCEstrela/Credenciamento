@model IEnumerable<IMOD.PreCredenciamentoWeb.Models.ColaboradorViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="col-md-12">
    <br />
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Gerenciar <b>Colaborador</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="~/Colaborador/Create" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add Novo Colaborador</span></a>
                    @*<a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>*@
                </div>
            </div>
        </div>
        <br />
        <table class="table table-hover table-responsive table-dark" id="tbVeiculo">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Cpf)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apelido)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.Foto)
                    </th>*@
                                @*<th>
                        @Html.DisplayNameFor(model => model.TelefoneFixo)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.TelefoneCelular)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cpf)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Apelido)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Foto)
                        </td>*@
                        @*<td>
                            @Html.DisplayFor(modelItem => item.TelefoneFixo)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.TelefoneCelular)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td class="col-lg-1">
                            <a href='@Url.Action("Details", "Colaborador", new { id = item.ColaboradorId })'>

                                <span class="glyphicon glyphicon-search"></span>
                            </a>
                            @if (item.Precadastro)
                            {
                                <a href='@Url.Action("Edit", "Colaborador", new { id = item.ColaboradorId })'>
                                    @*<img src="~/images/edit.png" />*@
                                    <span class="glyphicon glyphicon-edit"></span>
                                </a>

                                <a href='@Url.Action("Delete", "Colaborador", new { id = item.ColaboradorId })'>
                                    @*<img src="~/images/remove.png" />*@
                                    <span class="glyphicon glyphicon-trash"></span>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
 