@model IEnumerable<IMOD.PreCredenciamentoWeb.Models.ColaboradorViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="col-md-12" style="font-size: 12px">
    <br />
    <div class="table-wrapper">
        <br />
        <div class="panel-body">
            <table id="tabela" class="table table-hover table-striped table-dark " cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th style="width:90px;"><a href="~/Colaborador/Create"><i class="success btn-icon fa fa-plus-circle" style="color: #92c755; font-size: 17px; text-align:center"></i></a></th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cpf)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TelefoneCelular)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-lg-1" style="text-align:center;">
                                @if (item.Precadastro)
                                {
                                    <a href='@Url.Action("DetailsPreCadastro", "Colaborador", new { id = item.ColaboradorId })'>

                                        <span class="glyphicon glyphicon-search"></span>
                                    </a>
                                    <a href='@Url.Action("Edit", "Colaborador", new { id = item.ColaboradorId })'>
                                        @*<img src="~/images/edit.png" />*@
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>

                                    <a href='@Url.Action("Delete", "Colaborador", new { id = item.ColaboradorId })'>
                                        <span class="glyphicon glyphicon-trash"></span>
                                        @*<img src="~/images/remove.png" />*@
                                    </a>
                                }
                                else
                                {
                                    <a href='@Url.Action("Details", "Colaborador", new { id = item.ColaboradorId })'>

                                        <span class="glyphicon glyphicon-search"></span>
                                    </a>
                                    <a href='@Url.Action("EditRevisao", "Colaborador", new { id = item.ColaboradorId })'>
                                        @*<img src="~/images/edit.png" />*@
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                }
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.Cpf)
                            </td>
                            <td class="col-lg-3">
                                @Html.DisplayFor(modelItem => item.Nome).ToString().ToUpper()
                            </td>
                            <td class="col-lg-2">
                                @Html.DisplayFor(modelItem => item.TelefoneCelular)
                            </td>
                            <td class="col-lg-3">
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td class="col-lg-1">
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>