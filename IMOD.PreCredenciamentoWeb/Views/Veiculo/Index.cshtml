@model IEnumerable<IMOD.PreCredenciamentoWeb.Models.VeiculoViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="col-md-12" style="font-size: 12px">
    <br />
    <div class="table-wrapper">
        <br />
        <div class="panel-body">
            <table class="table table-hover table-responsive table-dark" id="tabela">
                <thead>
                    <tr>
                        <th style="width:90px;"><a href="~/Veiculo/Create"><i class="success btn-icon fa fa-plus-circle" style="color: #92c755; font-size: 17px; text-align:center"></i></a></th>
                        <th>
                            @Html.DisplayNameFor(model => model.PlacaIdentificador)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SerieChassi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Marca)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ano)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td class="col-lg-1" style="text-align:center;">

                                @if (item.Precadastro)
                                {
                                    <a href='@Url.Action("Details", "Veiculo", new { id = item.EquipamentoVeiculoId })'>
                                        <span class="glyphicon glyphicon-search"></span>
                                    </a>
                                    <a href='@Url.Action("Edit", "Veiculo", new { id = item.EquipamentoVeiculoId })'>
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                    <a href='@Url.Action("Delete", "Veiculo", new { id = item.EquipamentoVeiculoId })'>
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                }
                                else
                                {
                                    <a href='@Url.Action("DetailsRevisao", "Veiculo", new { id = item.EquipamentoVeiculoId })'>
                                        <span class="glyphicon glyphicon-search"></span>
                                    </a>

                                    <a href='@Url.Action("EditRevisao", "Veiculo", new { id = item.EquipamentoVeiculoId })'>
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PlacaIdentificador)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SerieChassi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Marca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ano)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

