@model IEnumerable<IMOD.PreCredenciamentoWeb.Models.VeiculoViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<div class="col-md-12">
    <br />
    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Gerenciar <b>Veiculo</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="/Veiculo/Create" class="btn btn-success" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Add Novo Veiculo</span></a>
                    @*<a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>*@
                </div>
            </div>
        </div>
        <br />
        <table class="table table-hover table-responsive table-dark" id="tbVeiculo">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PlacaIdentificador)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SerieChassi)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Patrimonio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ano)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlacaIdentificador)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SerieChassi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patrimonio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ano)
                        </td>
                        <td class="col-lg-1">
                            <a href='@Url.Action("Edit", "Veiculo", new { id = item.EquipamentoVeiculoId })'>
                                @*<img src="~/images/edit.png" />*@
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                            |
                            <a href='@Url.Action("Details", "Veiculo", new { id = item.EquipamentoVeiculoId })'>
                                @*<img src="~/images/lupa.png" />*@
                                <span class="glyphicon glyphicon-search"></span>
                            </a>
                            |
                            <a href='@Url.Action("Delete", "Veiculo", new { id = item.EquipamentoVeiculoId })'>
                                @*<img src="~/images/remove.png" />*@
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

