@model IMOD.PreCredenciamentoWeb.Models.EmpresaViewModel

@{
    ViewBag.Title = "Credenciamento";
}

<br />
<br />
<div class="table-wrapper">
    <div class="table-title">
        <div class="row">
            <div class="col-sm-6">
                <h2><b>Empresa</b></h2>
            </div>
            <div class="col-sm-6">
                <a href="@Url.Action("Edit", "Empresa", new { id = Model.EmpresaId })" class="btn btn-group" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Informações</span></a>
                @*<a href="/Colaborador/Create" class="btn btn-group" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Editar Empresa</span></a>*@
                @*<a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>*@
                <a href="@Url.Action("TrocaSenha", "Login")" class="btn btn-group" data-toggle="modal"><i class="fa fa-fw fa-lock"></i> <span>Trocar Senha</span></a>
            </div>
        </div>
    </div>
    <div class="Form-group row">
        <div class="col-sm-3">
            <picture>
                <img src=@Model.Logo height=120 width=120 />
            </picture>
        </div>
        <div class="col-sm-9 text-left">
            <div class="row">
                <div class="col-lg-12" style="align-content:center">
                    <h2>@Model.Nome</h2>
                </div>
                <div class="col-lg-12" style="align-content:center">
                    <div class="col-lg-3">
                        <h4>CNPJ</h4>
                        @Model.Cnpj
                    </div>
                    <div class="col-lg-5">
                        <h4>Contato</h4>
                        @Model.Contato1
                    </div>
                    <div class="col-lg-4">
                        <h4>E-Mail</h4>
                        @Model.Email1
                    </div>
                </div>
            </div>
        </div>
    </div>
