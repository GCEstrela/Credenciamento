@model IMOD.PreCredenciamentoWeb.Models.EmpresaViewModel

@{
    ViewBag.Title = "Credenciamento";
}

    <div class="table-wrapper">
        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Gerenciar <b>Empresa</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="@Url.Action("Edit", "Empresa", new { id = Model.EmpresaID })" class="btn btn-group" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Editar Empresa</span></a>
                    @*<a href="/Colaborador/Create" class="btn btn-group" data-toggle="modal"><i class="material-icons">&#xE147;</i> <span>Editar Empresa</span></a>*@
                    @*<a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal"><i class="material-icons">&#xE15C;</i> <span>Delete</span></a>*@
                </div>
            </div>
        </div>
        <div class="Form-group row">
            <div class="col-sm-3">
                <picture>
                    <img src=@Model.Logo height="60%" width="60%" />
                </picture>
            </div> 
            <div class="col-sm-9 text-left" >
                <h2>@Model.Nome</h2>
            </div>
            <div class="row">
                <div class="col-lg-12" style="align-content:center">
                    <div class="col-lg-3">
                        <h4>CNPJ</h4>
                        @Model.CNPJ                        
                    </div>
                    <div class="col-lg-5">
                        <h4>Contato</h4>
                        @Model.Contato1
                    </div>
                    <div class="col-lg-4">
                        <h4>E-Mail</h4>
                        @Model.Email1
                    </div>
                </div>
            </div>
        </div>
