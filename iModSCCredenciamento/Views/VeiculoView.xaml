                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="80" Header="Código"  DisplayMemberBinding="{Binding EquipamentoVeiculoID}"/>
                            <GridViewColumn Width="150" Header="Placa/ID"  DisplayMemberBinding="{Binding Placa_Identificador}"/>
