                                <StackPanel VerticalAlignment="Center" Margin="0,0" >
                                    <StackPanel.Resources>
                                        <i:StringToImageConverter x:Key="StringToImageConverter" />
                                    </StackPanel.Resources>
                                    <Border  CornerRadius="3"  BorderThickness="1" Width ="150" Height="150" Margin="0,0,0,10" HorizontalAlignment="Center" BorderBrush="#FF686868"  >
                                        <Image x:Name="Foto_im" Stretch="Fill" Source="{Binding SelectedItem.Foto, ElementName=ListaVeiculos_lv,
                                        Converter={StaticResource StringToImageConverter},UpdateSourceTrigger=Explicit, Mode=TwoWay}" Margin="0,-1,-1,0" />
