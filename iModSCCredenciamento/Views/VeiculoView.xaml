                            <GridViewColumn Width="350"  Header="Veículo/Equipamento" DisplayMemberBinding="{Binding Descricao}"/>
                            <GridViewColumn Width="200"  Header="Modelo" DisplayMemberBinding="{Binding Modelo}"/>
                            <GridViewColumn Width="100"  Header="Cor" DisplayMemberBinding="{Binding Cor}"/>
