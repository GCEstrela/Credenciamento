<UserControl x:Class="iModSCCredenciamento.Views.VeiculosCredenciaisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:iModSCCredenciamento.Views"
             xmlns:vm="clr-namespace:iModSCCredenciamento.ViewModels"
             xmlns:data="clr-namespace:Singulink.Windows.Data"
             xmlns:i="clr-namespace:iModSCCredenciamento.Funcoes"
             mc:Ignorable="d"  Loaded="UserControl_Loaded" >
    <UserControl.Resources>
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" />
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePickerTextBox">
                        <Grid >
                            <Grid.Resources>
                                <SolidColorBrush x:Key="WatermarkBrush" Color="#FFAAAAAA"/>
                            </Grid.Resources>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup Name="CommonStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="0" />
                                        <VisualTransition To="MouseOver" GeneratedDuration="0:0:0.1" />
                                    </VisualStateGroup.Transitions>
                                    <VisualState Name="Normal" />
                                    <VisualState Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ContentElement" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="#FF99C1E2" Duration="0"/>
                                            <ColorAnimation Storyboard.TargetName="watermark_decorator" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)" To="#FF99C1E2" Duration="0"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup Name="WatermarkStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="0" />
                                    </VisualStateGroup.Transitions>
                                    <VisualState Name="Unwatermarked" />
                                    <VisualState Name="Watermarked">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ContentElement" Storyboard.TargetProperty="Opacity" To="0" Duration="0" />
                                            <DoubleAnimation Storyboard.TargetName="PART_Watermark" Storyboard.TargetProperty="Opacity" To="1" Duration="0" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup Name="FocusStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="0" />
                                    </VisualStateGroup.Transitions>
                                    <VisualState Name="Unfocused" />
                                    <VisualState Name="Focused">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="FocusVisual" Storyboard.TargetProperty="Opacity" To="1" Duration="0" />
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>


                            <Border x:Name="Border" VerticalAlignment="Center"
                            Background="Transparent" 
                            BorderBrush="Transparent" 
                            BorderThickness="0"
                            Padding="{TemplateBinding Padding}"
                            CornerRadius="1" 
                            Opacity="1">
                                <Grid x:Name="WatermarkContent" 
                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="Center">
                                    <Border x:Name="ContentElement" BorderThickness="1">
                                        <Border.BorderBrush>
                                            <SolidColorBrush Color="Transparent"/>
                                        </Border.BorderBrush>
                                    </Border>
                                    <Border x:Name="watermark_decorator" BorderThickness="1" VerticalAlignment="Stretch">
                                        <Border.BorderBrush>
                                            <SolidColorBrush Color="Transparent"/>
                                        </Border.BorderBrush>
                                        <ContentControl x:Name="PART_Watermark"
                                                    Opacity="0"
                                                    Focusable="False"
                                                    IsHitTestVisible="False"
                                                    Padding="2" VerticalContentAlignment="Stretch">
                                            <ContentControl.Template>
                                                <ControlTemplate>
                                                    <TextBlock  VerticalAlignment="Center" Text="//"/>
                                                </ControlTemplate>
                                            </ContentControl.Template>
                                        </ContentControl>
                                    </Border>
                                    <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="0"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment= "Center" />
                                    <Border x:Name="FocusVisual" VerticalAlignment="Center" BorderBrush="#FF45D6FA" CornerRadius="1" Opacity="0" IsHitTestVisible="False"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <i:ConvertDescToBool x:Key="ConvertDescToBool" />
        <i:Check1Converter x:Key="Check" />
        <!--<Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
        </Style>-->
    </UserControl.Resources>

    <Grid >
        <StackPanel >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="Linha0_sp1" />
                    <RowDefinition Height="180"  />
                </Grid.RowDefinitions>

                <StackPanel x:Name="Linha0_sp" Grid.Row="0"  >
                    <!--IsEnabled="{Binding Path=HabilitaEdicao, Mode=TwoWay}"-->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1240"/>
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="0,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <GroupBox Style="{Styles {x:Static GroupBoxStyles.NamedSeparator}}"    x:Name="Vinculo_gb" Header="Informações do Vínculo" Grid.Column="0" Margin="10,10,8,10" VerticalAlignment="Stretch"  Height="91" Width="792" >
                                    <StackPanel x:Name="Vinculo_sp" Margin="0,10,10,0">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" >
                                            <Label Content="Empresa (Contrato):" Height="28" Width="237" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                            <ComboBox  x:Name="EmpresaVinculo_cb"  Width="500" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                                              ItemsSource="{Binding VeiculosEmpresas}" SelectedValue="{Binding SelectedItem.VeiculoEmpresaID, ElementName=ListaVeiculosCredenciais_lv,
                                            UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="VeiculoEmpresaID"   SelectionChanged="{data:MethodBinding  CarregaColeçãoEmpresasLayoutsCrachas,
                                            {Binding SelectedItem.VeiculoEmpresaID, ElementName=EmpresaVinculo_cb}}"  >
                                                <ComboBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Margin="0,0,10,0" Text="{Binding Path=EmpresaNome}" />
                                                            <TextBlock >
                                                              <Run Text=" ("/>
                                                              <Run Text="{Binding  Path=Descricao}"/>
                                                              <Run Text=")"/>
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </ComboBox.ItemTemplate>
                                            </ComboBox>

                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                                <GroupBox Style="{Styles {x:Static GroupBoxStyles.NamedSeparator}}"    x:Name="Impressao_gb" Header="Impressão" Grid.Column="0" Margin="10,10,8,10" VerticalAlignment="Stretch"  Height="91" Width="410" >
                                    <StackPanel Margin="0,10,10,0">
                                        <Button x:Name="ImprimirCredencial_bt" Height="30" Width="150" Content="Imprimir" Margin="10,10" Click="ImprimirCredencial_bt_Click">
                                            <Button.IsEnabled>
                                                <MultiBinding Converter="{StaticResource Check}" ConverterParameter="Imprimir">
                                                    <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.Validade"/>
                                                    <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.CredencialStatusDescricao"/>
                                                    <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.LayoutCrachaID"/>
                                                    <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.FormatoCredencialID"/>
                                                    <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.NumeroCredencial"/>
                                                    <Binding ElementName="StatusCredencial_tb" Path="SelectedItem.Descricao"/>
                                                    <Binding Path=""/>
                                                </MultiBinding>
                                            </Button.IsEnabled>
                                        </Button>
                                    </StackPanel>
                                </GroupBox>
                            </StackPanel>
                            <GroupBox Style="{Styles {x:Static GroupBoxStyles.NamedSeparator}}"    x:Name="DadosCredencial_gb" Header="Dados da Credencial" Grid.Column="0" Margin="10,10,0,10" VerticalAlignment="Stretch"  Height="125" HorizontalAlignment="Left" Width="1219" >
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel x:Name="DadosCredencial_sp" Margin="0,10,10,0">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" >
                                            <Label Content="Status:" Height="28" Width="100" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                            <ComboBox  x:Name="StatusCredencial_tb" Width="130" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                                              ItemsSource="{Binding CredenciaisStatus, Mode=TwoWay}" DisplayMemberPath="Descricao"   SelectedValue="{Binding SelectedItem.CredencialStatusID,
                                                ElementName=ListaVeiculosCredenciais_lv, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" SelectedValuePath="CredencialStatusID" Height="28"  />
                                            <Label Content="Tipo:" Height="28" Width="50" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                            <ComboBox  x:Name="TipoCredencial_cb" IsEnabled="{Binding ElementName=StatusCredencial_tb, Path=SelectedItem.Descricao,
                                        Converter={StaticResource ConvertDescToBool}}" Width="130" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                                              ItemsSource="{Binding TiposCredenciais}" DisplayMemberPath="Descricao"  SelectedValue="{Binding SelectedItem.TipoCredencialID,
                                            ElementName=ListaVeiculosCredenciais_lv, UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="TipoCredencialID"   />
                                            <Label Content="Modelo:" Height="28" Width="50" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                            <ComboBox  x:Name="ModeloCredencial_tb"  IsEnabled="{Binding ElementName=StatusCredencial_tb, Path=SelectedItem.Descricao,
                                        Converter={StaticResource ConvertDescToBool}}" Width="130" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                                              ItemsSource="{Binding EmpresasLayoutsCrachas, Mode=TwoWay}" DisplayMemberPath="Nome" 
                                                       SelectedValue="{Binding SelectedItem.LayoutCrachaID, ElementName=ListaVeiculosCredenciais_lv, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                              SelectedValuePath="LayoutCrachaID"  />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" >
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="80,5,0,0" >
                                                <StackPanel.Resources>
                                                    <i:AtualizaDataConverter x:Key="AtualizaData" />
                                                </StackPanel.Resources>

                                                <Label Content="Data de Emissao:" Height="28" Width="100" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                                <DatePicker Margin="-10,3,0,0" x:Name="Emissao_tb" VerticalContentAlignment="Center" SelectedDate="{Binding SelectedItem.Emissao, ElementName=ListaVeiculosCredenciais_lv,
                                                    UpdateSourceTrigger=PropertyChanged}" Width="120" Foreground="White" Background="{x:Null}" IsEnabled="False"/>
                                                <!--<TextBox HorizontalContentAlignment="Center" 
                                                               x:Name="Emissao_tb" 
                                                               IsEnabled="False"  Height="24"  Width="80" LostKeyboardFocus="Validade_tb_LostKeyboardFocus">
                                                    <TextBox.Text>
                                                        <MultiBinding Converter="{StaticResource AtualizaData}">
                                                            -->
                                                <!--<Binding ElementName="Teste_tb" Path="Text"/>-->
                                                <!--
                                                            <Binding Path="Validade" />
                                                            <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.Validade"/>
                                                        </MultiBinding>
                                                    </TextBox.Text>

                                                </TextBox>-->
                                                <Label Content="Data de Validade:" Height="28" Width="150" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                                <DatePicker Margin="-10,3,0,0" x:Name="Validade_tb" VerticalContentAlignment="Center" SelectedDate="{Binding SelectedItem.Validade,
                                                    ElementName=ListaVeiculosCredenciais_lv, UpdateSourceTrigger=PropertyChanged}" 
                                                            Width="120" Foreground="White" Background="{x:Null}" IsEnabled="False"/>

                                                <!--<TextBox HorizontalContentAlignment="Center" 
                                                               x:Name="Validade_tb" 
                                                               IsEnabled="False"  Height="24"  Width="80" LostKeyboardFocus="Validade_tb_LostKeyboardFocus">
                                                    <TextBox.Text>
                                                        <MultiBinding Converter="{StaticResource AtualizaData}">
                                                            -->
                                                <!--<Binding ElementName="Teste_tb" Path="Text"/>-->
                                                <!--
                                                            <Binding Path="Validade" />
                                                            <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.Validade"/>
                                                        </MultiBinding>
                                                    </TextBox.Text>

                                                </TextBox>-->

                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel x:Name="DadosAutenticacaoCredencial_sp" Orientation="Horizontal" >
                                        <StackPanel.IsEnabled>
                                            <MultiBinding Converter="{StaticResource Check}" ConverterParameter="DadosAutenticacaoCredencial">
                                                <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.CredencialGuid"/>
                                                <Binding Path=""/>
                                            </MultiBinding>
                                        </StackPanel.IsEnabled>
                                        <StackPanel Margin="0,10,10,0">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                                <Label Content="Método de Autenticação:" Height="28" Width="150" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                                <ComboBox  x:Name="TecnologiaCredencial_tb"  IsEnabled="{Binding ElementName=StatusCredencial_tb, Path=SelectedItem.Descricao,
                                            Converter={StaticResource ConvertDescToBool}}" Width="180" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                                                  ItemsSource="{Binding TecnologiasCredenciais, Mode=TwoWay}" DisplayMemberPath="Descricao"   SelectedValue="{Binding SelectedItem.TecnologiaCredencialID, ElementName=ListaVeiculosCredenciais_lv, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                  SelectedValuePath="TecnologiaCredencialID"  />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                                <Label Content="Formato da Credencial:" Height="28" Width="150" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                                <ComboBox  x:Name="FormatoCredencial_cb"  IsEnabled="{Binding ElementName=StatusCredencial_tb, Path=SelectedItem.Descricao,
                                            Converter={StaticResource ConvertDescToBool}}"  Width="180" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"
                                                  ItemsSource="{Binding FormatosCredenciais, Mode=TwoWay}" DisplayMemberPath="Descricao"   SelectedValue="{Binding SelectedItem.FormatoCredencialID, ElementName=ListaVeiculosCredenciais_lv, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                                  SelectedValuePath="FormatoCredencialID"  />

                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel Margin="0,10,10,0">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                                <Label Content="Código Facilitador (FC):" Height="28" Width="150" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                                <TextBox  x:Name="FC_tb"  MaxLength="5"  IsEnabled="{Binding ElementName=StatusCredencial_tb, Path=SelectedItem.Descricao,
                                            Converter={StaticResource ConvertDescToBool}}"  CharacterCasing="Upper" Text="{Binding SelectedItem.FC, ElementName=ListaVeiculosCredenciais_lv, UpdateSourceTrigger=PropertyChanged}"  Height="24"  Width="44"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                                <Label Content="Número.:" Height="28" Width="150" Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                                <TextBox  x:Name="NumeroCredencial_tb" IsEnabled="{Binding ElementName=StatusCredencial_tb, Path=SelectedItem.Descricao,
                                            Converter={StaticResource ConvertDescToBool}}"  MaxLength="10"  CharacterCasing="Upper" Text="{Binding SelectedItem.NumeroCredencial, ElementName=ListaVeiculosCredenciais_lv, UpdateSourceTrigger=PropertyChanged}"  Height="24"  Width="70"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>


                            </GroupBox>

                        </StackPanel>

                    </Grid>
                    <!--IsEnabled="{Binding Path=HabilitaEdicao, Mode=TwoWay}"-->

                </StackPanel>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1000*" />
                        <ColumnDefinition Width="168"  />
                    </Grid.ColumnDefinitions>
                    <StackPanel Margin="0,0,0,0" Grid.Column="0">
                        <ListView x:Name="ListaVeiculosCredenciais_lv" Margin="10,0,0,0" Height="180"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                      ItemsSource="{Binding VeiculosCredenciais, Mode=TwoWay}" SelectedIndex="{Binding Path=SelectedIndex, Mode=TwoWay}" 
                                      SelectedItem="{Binding Path = VeiculoCredencialSelecionado, Mode=TwoWay}" SelectionChanged="ListaVeiculosCredenciais_lv_SelectionChanged" >
                            <ListView.View>
                                <GridView >
                                    <GridViewColumn Width="500" Header="Vínculo Empregatício">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Margin="0,0,10,0" Text="{Binding Path=EmpresaNome}" />
                                                    <TextBlock >
                                                              <Run Text=" ("/>
                                                              <Run Text="{Binding  Path=ContratoDescricao}"/>
                                                              <Run Text=")"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="100" Header="Tipo"  >
                                        <GridViewColumn.CellTemplate  >
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TipoCredencialDescricao}"  TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="150" Header="Modelo" >
                                        <GridViewColumn.CellTemplate  >
                                            <DataTemplate>
                                                <TextBlock Text="{Binding LayoutCrachaNome}"   TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="100" Header="Status"  >
                                        <GridViewColumn.CellTemplate  >
                                            <DataTemplate>
                                                <TextBlock Text="{Binding CredencialStatusDescricao}"   TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="100" Header="Validade"  >
                                        <GridViewColumn.CellTemplate  >
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Validade, StringFormat='dd/MM/yyyy'}"   TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="180" Header="Tecnologia" >
                                        <GridViewColumn.CellTemplate  >
                                            <DataTemplate>
                                                <TextBlock Text="{Binding TecnologiaCredencialDescricao}"   TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="50" Header="FC" >
                                        <GridViewColumn.CellTemplate  >
                                            <DataTemplate>
                                                <TextBlock Text="{Binding FC}"    TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="100" Header="Código" >
                                        <GridViewColumn.CellTemplate  >
                                            <DataTemplate>
                                                <TextBlock Text="{Binding NumeroCredencial}"    TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="180" Header="Formato" >
                                        <GridViewColumn.CellTemplate  >
                                            <DataTemplate>
                                                <TextBlock Text="{Binding FormatoCredencialDescricao}"    TextAlignment="Center"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>

                    </StackPanel>
                    <Canvas x:Name="Botoes_ca"  Grid.Column="1"  HorizontalAlignment="Right" Width="158"  >
                        <StackPanel x:Name="Botoes_Principais_sp" >
                            <Button x:Name="Pesquisar_bt" Content="Pesquisar"  Height="40" Width="148"  Click="Pesquisar_bt_Click" Margin="0,0,0,7" />
                            <Button x:Name="Editar_bt" Content="Editar"  Height="40" Width="148"  Click="Editar_bt_Click" Margin="0,0,0,7"  />
                            <Button x:Name="Adicionar_bt" Content="Adicionar"  Height="40" Width="148" Click="Adicionar_bt_Click" Margin="0,0,0,7"  />
                            <Button x:Name="Excluir_bt" Content="Excluir"  Height="40" Width="148"  Click="Excluir_bt_Click" Margin="0,0,0,7"  />
                        </StackPanel>
                        <StackPanel x:Name="Botoes_Pesquisar_sp" Visibility="Hidden" >
                            <Button x:Name="ExecutarPesquisa_bt" Content="Executar Pequisa"  Height="40" Width="148"  Click="ExecutarPesquisa_bt_Click" Margin="0,0,0,7" Background="Green" />
                            <Button x:Name="CancelarPesquisa_bt" Content="Cancelar Pesquisa"  Height="40" Width="148"  Click="CancelarPesquisa_bt_Click" Margin="0,0,0,7" Background="Red"  />
                        </StackPanel>
                        <StackPanel x:Name="Botoes_Editar_sp" Visibility="Hidden"  >
                            <Button x:Name="CancelarEdicao_bt" Content="Cancelar Edição"  Height="40" Width="148"  Click="CancelarEdicao_bt_Click" Margin="0,0,0,7" Background="Red"   />
                            <Button x:Name="SalvarEdicao_bt" Content="Salvar"  Height="40" Width="148"  Click="SalvarEdicao_bt_Click" Margin="0,0,0,7" Background="Green" >
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource Check}" ConverterParameter="Salvar">
                                        <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.CredencialStatusID"/>
                                        <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.VeiculoEmpresaID"/>
                                        <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.TipoCredencialID"/>
                                        <Binding Path=""/>
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                        </StackPanel>
                        <StackPanel x:Name="Botoes_Adicionar_sp" Visibility="Hidden"  >
                            <Button x:Name="CancelarAdicao_bt" Content="Cancelar Adição"  Height="40" Width="148" Click="CancelarAdicao_bt_Click" Margin="0,0,0,7" Background="Red"   />
                            <Button x:Name="SalvarAdicao_bt" Content="Salvar"  Height="40" Width="148"  Click="SalvarAdicao_bt_Click" Margin="0,0,0,7"  Background="Green" >
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{StaticResource Check}" ConverterParameter="Salvar">
                                        <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.CredencialStatusID"/>
                                        <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.VeiculoEmpresaID"/>
                                        <Binding ElementName="ListaVeiculosCredenciais_lv" Path="SelectedItem.TipoCredencialID"/>
                                        <Binding Path=""/>
                                    </MultiBinding>
                                </Button.IsEnabled>
                            </Button>
                        </StackPanel>

                    </Canvas>
                </Grid>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>