@using DSBR.ServicesWeb.Infra.Helpers
@model DSBR.ServicesWeb.Domain.DadosLicenca

@{
 
Layout = null; 
 
}

<div class="modal fade" id="modal-page" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background:#2c3e50;color:#ffffff">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel" style="font-family: 'Francois One', sans-serif;">Licença</h4>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Licenciado para</label>
                            <h4>@Model.LicenciadoPara</h4> 
                        </div>
                        <div class="form-group">
                            <label>CNPJ</label>
                            <h4>@Model.Cnpj.FormatarCnpj()</h4> 
                        </div>
                        <div class="form-group">
                            <label>Hardware Info</label>
                            <h5>@Model.HardwareInfo</h5> 
                        </div>
                    </div>


                    <div class="col-md-6 col-lg-6">
                        <div class="form-group">
                            <label>Data Fim da Assinatura</label>
                            <h4>@Model.DataExpira.ToShortDateString()</h4> 
                        </div>
                        <div class="form-group">
                            <label>Número máx. de usuários</label>
                            <h4>@Model.NumUsuariosSimultaneos</h4> 
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button> 
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
 

<script type="text/javascript">

        $('.datepicker').datepicker({
            language: "pt-BR",
            todayHighlight: true
        });

</script>
