<UserControl x:Class="IMOD.CredenciamentoDeskTop.Modulo.AcessoNegado"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IMOD.CredenciamentoDeskTop.Modulo"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-200,0,0">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,0" HorizontalAlignment="Left">
            <Label Name="BlueCircle" Content="Acesso Negado" FontSize="50" Foreground="#FFD0D0D0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="780"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="1,100,0,0" HorizontalAlignment="Left">
            <Label Content="Sua licença é inválida." FontSize="14" Foreground="#FFD0D0D0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="780" Height="58"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="1,150,0,0" HorizontalAlignment="Left">
            <Label Content="Por favor, verifique junto ao fornecedor do Credenciamento uma licença válida para o seu System ID" FontSize="14" Foreground="#FFD0D0D0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="780"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="1,200,0,0" HorizontalAlignment="Left">
            <Label x:Name="lbl_DataExpirada" Content="" FontSize="14" FontWeight="Bold"  Foreground="Cornsilk"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="780"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="1,350,0,0" HorizontalAlignment="Center">
            <Label Content="Informe a nova licença:" Foreground="#FFD0D0D0"></Label>
            <TextBox x:Name="txtLicenca" Width="250"></TextBox>
            <Button x:Name="bntSalvarLicenca" Cursor="Hand" Content="Enviar"  Margin="10,0,0,0" Width="55" Click="BntSalvarLicenca_Click"></Button>
        </StackPanel>
        <StackPanel  Orientation="Horizontal" VerticalAlignment="Center"  Margin="1,420,0,0" HorizontalAlignment="Center">
            <Label x:Name="lblResposta" Content="" Margin="0,0,0,0" FontSize="20" FontWeight="Bold" Foreground="Red"/>
        </StackPanel>
    </Grid>
</UserControl>
