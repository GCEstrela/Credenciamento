<UserControl x:Class="IMOD.CredenciamentoDeskTop.Views.ConfiguracoesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:IMOD.CredenciamentoDeskTop.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:ConfiguracoesViewModel , IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             MaxWidth="1300" Width="1270" >
    <UserControl.Resources>
        <Image x:Key="imgAdd" Source="../Resources/add.png" />
        <Image x:Key="imgEdit" Source="../Resources/edit.png" />
        <Image x:Key="imgRemove" Source="../Resources/remove.png"  />
        <Image x:Key="imgSave" Source="../Resources/save.png" />
        <Image x:Key="imgCancel" Source="../Resources/undo.png" />

        <Image x:Key="imgAddAreaAcesso" Source="../Resources/add.png" />
        <Image x:Key="imgRemoveAreaAcesso" Source="../Resources/remove.png" />
        <Image x:Key="imgSaveAreaAcesso" Source="../Resources/save.png" />
        <Image x:Key="imgCancelAreaAcesso" Source="../Resources/undo.png" />
    </UserControl.Resources>
    
    <Grid Margin="5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="1" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="168"  />
            </Grid.ColumnDefinitions>

        </Grid>
        <TabControl x:Name="TabGeral_tc" Grid.Row="1" Grid.Column="0" Margin="0,10,0,0" IsSynchronizedWithCurrentItem="True" TabStripPlacement="Top" >

            <TabItem x:Name="Empresas_ti"  Width="200"  Header="Empresas"  >
                <ScrollViewer   VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Auto"  >
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="196*"/>
                                <ColumnDefinition Width="13*"/>
                                <ColumnDefinition Width="209*" />
                            </Grid.ColumnDefinitions>

                            <GroupBox  x:Name="TiposAtividades_gb"  Header="Tipos de Atividades:" Grid.Row="0" Grid.Column="0"   Margin="10,10,10,10" VerticalAlignment="Stretch" >
                                <StackPanel Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" >
                                        <Label Content="Código:" Height="28" Width="53"  Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="CodigoAtividades_tb"  Text="{Binding SelectedItem.TipoAtividadeId, ElementName=ListaTiposAtividades_lv, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"  Height="24"  Width="50"/>
                                        <Label Content="Atividades:" Height="28" Width="112"   Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="DescricaoAtividades_tb"  Text="{Binding SelectedItem.Descricao, ElementName=ListaTiposAtividades_lv, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True"  Height="24"  Width="334"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                        <StackPanel>
                                            <ListView x:Name="ListaTiposAtividades_lv" Margin="0,0,0,0"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding TiposAtividades, Mode=TwoWay}" 
                                                        SelectedItem="{Binding Path = TipoAtividadeSelecionada, Mode=TwoWay}"  Height="167" Width="560"
                                                   SelectedIndex="{Binding Path=TipoAtividadeSelectedIndex, Mode=TwoWay}" >
                                            <ListView.View>
                                                <GridView FrameworkElement.FlowDirection="RightToLeft">
                                                    <GridViewColumn Width="50" Header="Cod."  DisplayMemberBinding="{Binding TipoAtividadeId}"/>
                                                    <GridViewColumn Width="500" Header="Atividades"  DisplayMemberBinding="{Binding Descricao}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                        </StackPanel>
                                        <StackPanel Orientation="Vertical" Margin="0,0" Width="30" HorizontalAlignment="Right" Height="167" VerticalAlignment="Top" >
                                            <Button x:Name="btnAdicionarTipoAtividade" Content="{StaticResource imgAdd}" ToolTip="Adicionar" Width="25"
                                                Margin="0,0,0,7" Click="NovoTipoAtividade_bt_Click" />

                                            <Button x:Name="btnExcluirTipoAtividade" Content="{StaticResource imgRemove}" ToolTip="Remover" Width="25"
                                                    Margin="0,0,0,7" Click="DeletarTipoAtividade_bt_Click" />

                                            <Button x:Name="btnCancelarTipoAtividade" Content="{StaticResource imgCancel}" ToolTip="Cancelar" Width="25"
                                                Margin="0,0,0,7" Click="CancelarTipoAtividade_bt_Click" />

                                            <Button x:Name="btnSalvarTipoAtividade" Content="{StaticResource imgSave}" ToolTip="Salvar" Width="25"
                                                    Margin="0,0,0,7" Click="SalvarTipoAtividade_bt_Click" IsEnabled="False"/>
                                        </StackPanel>
                                    </StackPanel>
                              
                                </StackPanel>
                            </GroupBox>

                            <GroupBox x:Name="TiposAreasAcessos_gb"  Grid.Row="0" Grid.Column="2"  Header="Áreas de Acesso " Margin="10,10,10,10" VerticalAlignment="Stretch" >
                                <StackPanel Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" Width="560" >

                                        <Label Content="Código:" Height="28" Width="50"  Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" Visibility="Collapsed" />
                                        <TextBox CharacterCasing="Upper"  x:Name="CodigoAreasAcessos_tb"  Text="{Binding SelectedItem.AreaAcessoId, ElementName=ListaTiposAreasAcessos_lv, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"  Height="24"  Width="36" Visibility="Collapsed"/>
                                        <Label Content="Identificação:" Height="28" Width="77"  Margin="0,0,1,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="IdentificacaoAreasAcessos_tb"  Text="{Binding SelectedItem.Identificacao, ElementName=ListaTiposAreasAcessos_lv, UpdateSourceTrigger=PropertyChanged}" IsEnabled="True"  Height="24"  Width="52"/>

                                        <Label Content="Área de Acesso:" Height="28" Width="106"   Margin="0,0,1,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="DescricaoAreasAcessos_tb"  Text="{Binding SelectedItem.Descricao, ElementName=ListaTiposAreasAcessos_lv, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True"  Height="24"  Width="321"/>

                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                        <ListView x:Name="ListaTiposAreasAcessos_lv" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding AreasAcessos, Mode=TwoWay}" 
                                                          SelectedItem="{Binding Path = AreaAcessoSelecionada, Mode=TwoWay}"  Height="167" Width="560" 
                                                   SelectedIndex="{Binding Path=AreaAcessoSelectedIndex, Mode=TwoWay}" >

                                            <ListView.View>
                                                <GridView FrameworkElement.FlowDirection="RightToLeft">
                                                    <GridViewColumn Width="100" Header="Identificacao"  DisplayMemberBinding="{Binding Identificacao}"/>
                                                    <GridViewColumn Width="500" Header="Área de Acesso"  DisplayMemberBinding="{Binding Descricao}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                        <StackPanel Orientation="Vertical" Margin="0,0" Width="30" HorizontalAlignment="Right" Height="167" VerticalAlignment="Top" >
                                            <Button x:Name="btnAdicionarTiposAreasAcessos" ToolTip="Adicionar" Width="25"
                                                Margin="0,0,0,7" Click="NovoTiposAreasAcessos_bt_Click" >
                                                <StackPanel>
                                                    <Image Source="../Resources/add.png" /> 
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnExcluirTiposAreasAcessos" ToolTip="Remover" Width="25"
                                                    Margin="0,0,0,7" Click="DeletarTiposAreasAcessos_bt_Click" >
                                                <StackPanel>
                                                    <Image Source="../Resources/remove.png" />
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnCancelarTiposAreasAcessos" ToolTip="Cancelar" Width="25"
                                                Margin="0,0,0,7" Click="CancelarTiposAreasAcessos_bt_Click" >
                                                <StackPanel>
                                                    <Image Source="../Resources/undo.png" />
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnSalvarTiposAreasAcessos" ToolTip="Salvar" Width="25"
                                                    Margin="0,0,0,7" Click="SalvarTiposAreasAcessos_bt_Click" IsEnabled="False">
                                                <StackPanel>
                                                    <Image Source="../Resources/save.png" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>



                            <GroupBox  x:Name="TiposCobrancas_gb"  Grid.Row="1" Grid.Column="0"  Header=" Tipos de Cobranças " Margin="10,10,10,10" VerticalAlignment="Stretch" >
                                <StackPanel Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" >

                                        <Label Content="Código:" Height="28" Width="53"  Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="CodigoCobrancas_tb"  Text="{Binding SelectedItem.TipoCobrancaId, ElementName=ListaTiposCobrancas_lv, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"  Height="24"  Width="50"/>
                                        <Label Content="Tipo de Cobrança:" Height="28" Width="112"   Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="DescricaoCobrancas_tb"  Text="{Binding SelectedItem.Descricao, ElementName=ListaTiposCobrancas_lv, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True"  Height="24"  Width="334"/>

                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                        <ListView x:Name="ListaTiposCobrancas_lv" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding TiposCobrancas, Mode=TwoWay}" 
                                                          SelectedItem="{Binding Path = TipoCobrancaSelecionado, Mode=TwoWay}" Height="167" Width="560"
                                                   SelectedIndex="{Binding Path=TipoCobrancaSelectedIndex, Mode=TwoWay}" >
                                            <ListView.View>
                                                <GridView FrameworkElement.FlowDirection="RightToLeft">
                                                    <GridViewColumn Width="50" Header="Cod."  DisplayMemberBinding="{Binding TipoCobrancaId}"/>
                                                    <GridViewColumn Width="500" Header="Tipo de Cobrança"  DisplayMemberBinding="{Binding Descricao}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                        <StackPanel Orientation="Vertical" Margin="0,0" Width="30" HorizontalAlignment="Right" Height="167" VerticalAlignment="Top" >
                                            <Button x:Name="btnAdicionarTiposCobranca" ToolTip="Adicionar" Width="25"
                                                Margin="0,0,0,7" Click="btnAdicionarTiposCobranca_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/add.png" />
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnDeletarTiposCobranca" ToolTip="Remover" Width="25"
                                                    Margin="0,0,0,7" Click="btnDeletarTiposCobranca_Click" >
                                                <StackPanel>
                                                    <Image Source="../Resources/remove.png" />
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnCancelarTiposCobranca" ToolTip="Cancelar" Width="25"
                                                Margin="0,0,0,7" Click="btnCancelarTiposCobranca_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/undo.png" />
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnSalvarTiposCobranca" ToolTip="Salvar" Width="25"
                                                    Margin="0,0,0,7" Click="btnSalvarTiposCobranca_Click" IsEnabled="False">
                                                <StackPanel>
                                                    <Image Source="../Resources/save.png" />
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox x:Name="TiposStatus_gb"  Grid.Row="1" Grid.Column="2"  Header=" Status da Empresa " Margin="10,10,10,10" VerticalAlignment="Stretch"  >
                                <StackPanel Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" >
                                        <Label Content="Código:" Height="28" Width="53"  Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="CodigoStatus_tb"  Text="{Binding SelectedItem.StatusId, ElementName=ListaTiposStatus_lv, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"  Height="24"  Width="50"/>
                                        <Label Content="Status da Empresa:" Height="28" Width="110"   Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="DescricaoStatus_tb"  Text="{Binding SelectedItem.Descricao, ElementName=ListaTiposStatus_lv, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True"  Height="24"  Width="336"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                        <ListView x:Name="ListaTiposStatus_lv" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding TiposStatus, Mode=TwoWay}" 
                                                          SelectedItem="{Binding Path = TipoStatusSelecionado, Mode=TwoWay}"  Height="167" Width="560"
                                                   SelectedIndex="{Binding Path=TipoStatusSelectedIndex, Mode=TwoWay}" >
                                            <ListView.View>
                                                <GridView FrameworkElement.FlowDirection="RightToLeft">
                                                    <GridViewColumn Width="50" Header="Cod."  DisplayMemberBinding="{Binding StatusId}"/>
                                                    <GridViewColumn Width="500" Header="Status"  DisplayMemberBinding="{Binding Descricao}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                        <StackPanel Orientation="Vertical" Margin="0,0" Width="30" HorizontalAlignment="Right" Height="167" VerticalAlignment="Top" >
                                            <Button x:Name="btnAdicionarTiposStatus" ToolTip="Adicionar" Width="25"
                                                Margin="0,0,0,7" Click="btnAdicionarTiposStatus_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/add.png"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnDeletarTiposStatus" ToolTip="Remover" Width="25"
                                                    Margin="0,0,0,7" Click="btnDeletarTiposStatus_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/remove.png"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnCancelarTiposStatus" ToolTip="Cancelar" Width="25"
                                                Margin="0,0,0,7" Click="btnCancelarTiposStatus_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/undo.png"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnSalvarTiposStatus" ToolTip="Salvar" Width="25"
                                                    Margin="0,0,0,7" Click="btnSalvarTiposStatus_Click" IsEnabled="False">
                                                <StackPanel>
                                                    <Image Source="../Resources/save.png"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                        </Grid>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem x:Name="TabelasAuxiliares_ti" Header="Colaboradores e Veículos" Width="200" >

                <ScrollViewer   VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Auto"  >
                    <StackPanel>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="196*"/>
                                <ColumnDefinition Width="13*"/>
                                <ColumnDefinition Width="209*" />
                            </Grid.ColumnDefinitions>

                            <GroupBox x:Name="TipoEquipamento_gb" Header="Tipos de Equipamentos:"  Grid.Row="0" Grid.Column="0"   Margin="10,10,10,10" VerticalAlignment="Stretch" >
                                <StackPanel Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" >

                                        <Label Content="Código:" Height="28" Width="53"  Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="CodigoEquipamento_tb"  Text="{Binding SelectedItem.TipoEquipamentoId, ElementName=ListaTipoEquipamento_lv, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"  Height="24"  Width="50"/>
                                        <Label Content="Tipos de Equip:" Height="28" Width="113"   Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="DescricaoEquipamento_tb"  Text="{Binding SelectedItem.Descricao, ElementName=ListaTipoEquipamento_lv, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True"  Height="24"  Width="334"/>

                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                        <ListView x:Name="ListaTipoEquipamento_lv" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding TiposEquipamentos, Mode=TwoWay}" 
                                                          SelectedItem="{Binding Path = TipoEquipamentoSelecionado, Mode=TwoWay}" Height="167" Width="560"
                                                   SelectedIndex="{Binding Path=TipoEquipamentoSelectedIndex, Mode=TwoWay}" >
                                            <ListView.View>
                                                <GridView FrameworkElement.FlowDirection="RightToLeft">
                                                    <GridViewColumn Width="50" Header="Cód."  DisplayMemberBinding="{Binding TipoEquipamentoId}"/>
                                                    <GridViewColumn Width="500" Header="Tipos de Equipamento"  DisplayMemberBinding="{Binding Descricao}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>
                                        
                                        <StackPanel Orientation="Vertical" Margin="0,0" Width="30" HorizontalAlignment="Right" Height="167" VerticalAlignment="Top" >
                                            <Button x:Name="btnAdicionarEquipamento" ToolTip="Adicionar" Width="25"
                                                Margin="0,0,0,7" Click="btnAdicionarEquipamento_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/add.png"/> 
                                                </StackPanel> 
                                            </Button>
                                            <Button x:Name="btnDeletarEquipamento" ToolTip="Remover" Width="25"
                                                    Margin="0,0,0,7" Click="btnDeletarEquipamento_Click"> 
                                                <StackPanel> 
                                                    <Image Source="../Resources/remove.png"/>
                                                </StackPanel> 
                                            </Button>
                                            <Button x:Name="btnCancelarEquipamento" ToolTip="Cancelar" Width="25"
                                                Margin="0,0,0,7" Click="btnCancelarEquipamento_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/undo.png"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnSalvarEquipamento" ToolTip="Salvar" Width="25"
                                                    Margin="0,0,0,7" Click="btnSalvarEquipamento_Click" IsEnabled="False">
                                                <StackPanel>
                                                    <Image Source="../Resources/save.png"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                </StackPanel>
                            </GroupBox>

                            <GroupBox  x:Name="TipoServico_gb"  Grid.Row="0" Grid.Column="2"  Header=" Tipos de Serviços " Margin="10,10,10,10" VerticalAlignment="Stretch" >
                                <StackPanel Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" >
                                        <Label Content="Código:" Height="28" Width="53"  Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="CodigoTipoServico_tb"  Text="{Binding SelectedItem.TipoServicoId, ElementName=ListaTipoServico_lv, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"  Height="24"  Width="50"/>
                                        <Label Content="Tipo de Serviço:" Height="28" Width="113"   Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="DescricaoTipoServico_tb"  Text="{Binding SelectedItem.Descricao, ElementName=ListaTipoServico_lv, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True"  Height="24"  Width="334"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                        <ListView x:Name="ListaTipoServico_lv" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding TipoServico, Mode=TwoWay}" 
                                                          SelectedItem="{Binding Path = TipoServicoSelecionado, Mode=TwoWay}"  Height="167" Width="560"
                                                   SelectedIndex="{Binding Path=TipoServicoSelectedIndex, Mode=TwoWay}" >
                                            <ListView.View>
                                                <GridView FrameworkElement.FlowDirection="RightToLeft">
                                                    <GridViewColumn Width="50" Header="Cod."  DisplayMemberBinding="{Binding TipoServicoId}"/>
                                                    <GridViewColumn Width="500" Header="Tipo de Serviço"  DisplayMemberBinding="{Binding Descricao}"/>
                                                </GridView>
                                            </ListView.View>
                                        </ListView>

                                        <StackPanel Orientation="Vertical" Margin="0,0" Width="30" HorizontalAlignment="Right" Height="167" VerticalAlignment="Top" >
                                            <Button x:Name="btnAdicionarTipoServico" ToolTip="Adicionar" Width="25"
                                                Margin="0,0,0,7" Click="btnAdicionarTipoServico_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/add.png"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnDeletarTipoServico" ToolTip="Remover" Width="25"
                                                    Margin="0,0,0,7" Click="btnDeletarTipoServico_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/remove.png"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnCancelarTipoServico" ToolTip="Cancelar" Width="25"
                                                Margin="0,0,0,7" Click="btnCancelarTipoServico_Click">
                                                <StackPanel>
                                                    <Image Source="../Resources/undo.png"/>
                                                </StackPanel>
                                            </Button>
                                            <Button x:Name="btnSalvarTipoServico" ToolTip="Salvar" Width="25"
                                                    Margin="0,0,0,7" Click="btnSalvarTipoServico_Click" IsEnabled="False">
                                                <StackPanel>
                                                    <Image Source="../Resources/save.png"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </GroupBox>

                            <GroupBox x:Name="TiposCursos_gb"  Grid.Row="1" Grid.Column="0"  Header=" Treinamentos e Certificações " Margin="10,10,10,10" VerticalAlignment="Stretch" >
                                <StackPanel Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0" >
                                        <Label Content="Código:" Height="28" Width="54"  Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="CodigoCursos_tb"  Text="{Binding SelectedItem.CursoId, ElementName=ListaTiposCursos_lv, UpdateSourceTrigger=PropertyChanged}" IsEnabled="False"  Height="24"  Width="50"/>
                                        <Label Content="Treinam./Certif." Height="28" Width="112"   Margin="0,0,5,0" HorizontalContentAlignment="Right" Foreground="#FFD0D0D0" />
                                        <TextBox CharacterCasing="Upper"  x:Name="DescricaoCursos_tb"  Text="{Binding SelectedItem.Descricao, ElementName=ListaTiposCursos_lv, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True"  Height="24"  Width="334"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="0,5,0,0">
                                        <ListView x:Name="ListaTiposCursos_lv" Margin="0,0,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding Cursos, Mode=TwoWay}" 
                                                          SelectedItem="{Binding Path = CursoSelecionado, Mode=TwoWay}"  Height="167" Width="560"
                                                   SelectedIndex="{Binding Path=CursoSelectedIndex, Mode=TwoWay}" >
                                            <ListView.View>
