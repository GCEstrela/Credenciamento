                                <Label Content="RG:" Height="28" Foreground="#FFD0D0D0" Width="75"
                                       HorizontalContentAlignment="Left" />
                                <TextBox x:Name="RG_tb" PreviewTextInput="NumberOnly" MaxLength="20"
