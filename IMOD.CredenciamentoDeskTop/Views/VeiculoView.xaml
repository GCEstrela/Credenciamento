                            <StackPanel>
                                <Image Source="{Binding Pendencia21,
                                        Converter={StaticResource ConvertBoolToImage},
                                        UpdateSourceTrigger=Explicit, Mode=TwoWay}"
                                    Width="16" Height="16" RenderTransformOrigin="1,1" />
                            </StackPanel>
                        </Button>
                        <StackPanel Width="170">
                            <TextBlock Text="Geral" HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </TabItem.Header>
                <Grid IsEnabled="{Binding Comportamento.isEnableCancelar}" Margin="5" HorizontalAlignment="Left" Width="601">
                    <GroupBox Style="{Styles {x:Static GroupBoxStyles.NamedSeparator}}" Header="Identificação"
                              Background="BlueViolet" Height="230" VerticalAlignment="Top" Margin="0,0,-15,0">
                        <StackPanel Orientation="Horizontal" Height="230" Margin="2,0,-2,0" VerticalAlignment="Top">
                            <StackPanel.Resources>
                            </StackPanel.Resources>
                            <StackPanel Margin="1,1,1,0" Height="157" VerticalAlignment="Top">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  HorizontalAlignment="Left" Margin="1,1,0,1">
                                    <Label Content="Tipo:" Height="28"   Width="110" Foreground="#FFD0D0D0" HorizontalContentAlignment="Right"/>
                                    <ComboBox  x:Name="cboTipo"   Text="{Binding Entity.Tipo, UpdateSourceTrigger=PropertyChanged}"
                                               Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"
                                               Height="24"  Width="329"  TabIndex="0" >
                                        <ComboBoxItem>EQUIPAMENTO</ComboBoxItem>
                                        <ComboBoxItem>VEÍCULO</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="1">
                                    <Label Content="Descrição:" Height="28" Width="110"  HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                    <TextBox CharacterCasing="Upper" x:Name="txtDescricao" Text="{Binding Entity.Descricao}"
                                             MaxLength="50" IsEnabled="True" Height="24" Width="330" Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left" Margin="1">
                                    <Label Content="Placa/Identificador:" Height="28" Width="110" HorizontalContentAlignment="Right"  Foreground="#FFD0D0D0" />
                                    <TextBox  MaxLength="10" x:Name="txtPlacaIdentificador" CharacterCasing="Upper" Text="{Binding Entity.PlacaIdentificador, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True"  Height="24"  Width="123" Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}" />
                                    <Label Content="Série/Chassi:" Height="28" Width="78"  Foreground="#FFD0D0D0" HorizontalContentAlignment="Right"/>
                                    <TextBox  x:Name="txtSerieChassi" MaxLength="20" CharacterCasing="Upper" 
                                              Text="{Binding Entity.SerieChassi, UpdateSourceTrigger=PropertyChanged}"  IsEnabled="True"  Height="24"  Width="129" 
                                              Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}" />

                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left" Margin="1">
                                    <Label Content="Frota:" Height="28" Width="110"  HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                    <TextBox CharacterCasing="Upper" x:Name="txtFrota" MaxLength="10"
                                             Text="{Binding Entity.Frota, UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="True" Height="24" Width="124"
                                             Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                                    <Label Content="Patrimônio:" Height="28" Width="76" Margin="1" Foreground="#FFD0D0D0" HorizontalContentAlignment="Right"/>
                                    <TextBox CharacterCasing="Upper" x:Name="txtPatrimonio" MaxLength="10"
                                             Text="{Binding Entity.Patrimonio, UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="True" Height="24" Width="128" 
                                             Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left" Margin="1">
                                    <Label Content="Marca:" Height="28" Width="110" HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                    <TextBox CharacterCasing="Upper" x:Name="txtMarca" MaxLength="11"
                                             Text="{Binding Entity.Marca, UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="True" Height="24" Width="124" 
                                             Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                                    <Label Content="Modelo:" Height="28" Width="77" HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                    <TextBox CharacterCasing="Upper" x:Name="txtModeloVeiculoEquipamento" MaxLength="50"
                                             Text="{Binding Entity.Modelo,UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="True" Height="24" Width="127" Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                                </StackPanel>

                            </StackPanel>
                            <StackPanel VerticalAlignment="Top" Margin="23,7,20,0" Height="140" Width="101" >
                                <Border  CornerRadius="3"  BorderThickness="1"   Width ="100" Height="100" HorizontalAlignment="Left" BorderBrush="#FF686868"  >
                                    <Image x:Name="Logo_im" Stretch="Uniform" Source="{Binding Entity.Foto, Converter={StaticResource ImageConverter}, Mode=TwoWay, UpdateSourceTrigger=Explicit}" Margin="3" RenderTransformOrigin="1,1"/>
                                </Border>
                                <Button x:Name="SelecionarLogo_bt" Content="Selecionar Foto"
                                        HorizontalAlignment="Right" Margin="0,10,1,0" Height="30" Width="100"
                                        Click="OnSelecionaFoto_Click" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Background="Coral" Style="{Styles {x:Static GroupBoxStyles.NamedSeparator}}"
                              Header="Especificações " HorizontalAlignment="Left" Margin="621,0,-611,254" Width="591">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left" Margin="0,5,0,0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left" Margin="1">
                                    <Label Content="Natureza:" Height="28" Width="110" HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                    <ComboBox Margin="0,4,0,3" Height="25" x:Name="txtNatureza"
                                                  ItemsSource="{Binding ListaEquipamentos}" DisplayMemberPath="Descricao" 
                                                  SelectedValue="{Binding Entity.TipoEquipamentoVeiculoId,  UpdateSourceTrigger=PropertyChanged}" 
                                                  SelectedValuePath="TipoEquipamentoId" IsSynchronizedWithCurrentItem="True" 
                                                  SelectedIndex="0" 
                                                  Width="381" Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left" Margin="1">
                                <Label Content="Ano:" Height="28" Width="110" HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                <TextBox CharacterCasing="Upper"   MaxLength="4" x:Name="txtAno"
                                             Text="{Binding Entity.Ano, UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="True" PreviewTextInput="NumberOnly"  Height="24" Width="60" 
                                             Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                                <Label Content="Combustível:" Height="28" Width="110" Margin="1" Foreground="#FFD0D0D0" HorizontalContentAlignment="Right"/>
                                <ComboBox  Height="26" VerticalContentAlignment="Center" x:Name="cmbCombustivel"
                                               HorizontalContentAlignment="Center"
                                               ItemsSource="{Binding TiposCombustiveis}" DisplayMemberPath="Descricao"
                                               SelectedValue="{Binding Entity.CombustivelId, UpdateSourceTrigger=PropertyChanged}" 
                                               SelectedValuePath="TipoCombustivelId"   TabIndex="14" Width="173" 
                                               Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left" Margin="1">
                                <Label Content="Altura (cm):" Height="28" Width="110" HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                <TextBox CharacterCasing="Upper" MaxLength="5" x:Name="txtAltura"
                                             PreviewTextInput="NumberOnly"
                                             Text="{Binding Entity.Altura,UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="True" Height="24" Width="60" Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                                <Label Content="Comprimento (cm):" Height="28" Width="111" HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                <TextBox CharacterCasing="Upper" MaxLength="5" x:Name="txtComprimento"
                                             PreviewTextInput="NumberOnly"
                                             Text="{Binding Entity.Comprimento,UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="True" Height="24" Width="45" Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                                <Label Content="Largura (cm):" Height="28" Width="78" HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                <TextBox CharacterCasing="Upper" MaxLength="5" x:Name="txtLargura"
                                             PreviewTextInput="NumberOnly" 
                                             Text="{Binding Entity.Largura,UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="True" Height="24" Width="45" Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left" Margin="1">
                                <Label Content="Cor:" Height="28" Width="110" HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                <TextBox CharacterCasing="Upper"   MaxLength="20" x:Name="txtCor"
                                             Text="{Binding Entity.Cor,UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="True" Height="24" Width="98" Validation.ErrorTemplate="{StaticResource ValidationErrorTemplate}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Label Content="UF:" Height="28" Width="110" HorizontalContentAlignment="Right"
                                           Foreground="#FFD0D0D0" />
                                <ComboBox x:Name="cmbEstado" Margin="0,4,0,3" Height="25"
                                                  ItemsSource="{Binding Estados}" DisplayMemberPath="Uf" 
                                                  SelectedValue="{Binding Entity.EstadoId,  UpdateSourceTrigger=PropertyChanged}" 
                                                  SelectedValuePath="EstadoId" IsSynchronizedWithCurrentItem="True" 
                                                  SelectedIndex="0"
                                                  SelectedItem="{Binding Estado}"
                                                  Width="99" />

                                <Label Content="Cidade:" Height="28" Width="111"    Foreground="#FFD0D0D0" HorizontalContentAlignment="Right" />
                                <ComboBox x:Name="cmbCidade" Height="25" 
                                                   ItemsSource="{Binding Municipios}" DisplayMemberPath="Nome"
                                                  SelectedValue="{Binding Entity.MunicipioId,  UpdateSourceTrigger=PropertyChanged}" 
                                                  SelectedValuePath="MunicipioId"
                                                  SelectedIndex="0"
                                                  Margin="0,2,0,3" Width="175"/>
                            </StackPanel>

                        </StackPanel>

                    </GroupBox>

                    <GroupBox Background="Aquamarine" Style="{Styles {x:Static GroupBoxStyles.NamedSeparator}}"
                              Header="Características " HorizontalAlignment="Left" Width="614" Margin="2,231,-15,107">

                        <StackPanel Orientation="Horizontal" Height="124" VerticalAlignment="Top">
                            <StackPanel Width="469" Margin="0,0,0,10">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left">
                                    <Label Content="Tipo de Serviço:" Height="28" Width="104" Margin="0,0,5,0"
                                           Foreground="#FFD0D0D0" HorizontalContentAlignment="Right" />
                                    <ComboBox   IsEnabled="True" Height="30" Width="280"
                                              ItemsSource="{Binding ListaTipoServico}"
                                              SelectedItem="{Binding TipoServico}"
                                              DisplayMemberPath="Descricao"
                                              SelectedValuePath="TipoServicoId" />
                                    <Button   Content="Incluir" Margin="10,0,0,0" Width="65"
                                            Height="24" Click="OnAdicionarTipoServico_Click" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                            HorizontalAlignment="Left" Margin="109,5,0,0" Width="355" Height="90">
                                    <ListBox x:Name="lstBoxTipoAtividade" IsEnabled="True" Width="280"
                                             ItemsSource="{Binding TiposEquipamentoServico, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                             DisplayMemberPath="Descricao" Height="69" VerticalAlignment="Top" />
                                    <Button   Content="Excluir" Margin="10,0,0,0" Width="65"
                                            Height="24" VerticalAlignment="Top" Click="OnRemoverTipoServico_Click" />
                                </StackPanel>
                            </StackPanel>


                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem x:Name="Signatarios_ti" Width="200" IsEnabled="{Binding IsEnableTabItemEmpresaVinculo}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="Signatarios_bt" Click="OnPendenciaVinculos_Click"
                                Style="{StaticResource MenuStyle}" IsEnabled="{Binding Comportamento.IsEnableEditar}">
                            <StackPanel>
                                <Image
                                    Source="{Binding Pendencia22,
                                        Converter={StaticResource ConvertBoolToImage},UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Width="16" Height="16" />
                            </StackPanel>
                        </Button>
                        <StackPanel Width="170">
                            <TextBlock Text="Empresas Vinculos" HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </TabItem.Header>
                <views:VeiculosEmpresasView x:Name="VeiculosEmpresasUs" Margin="5,5,14,18"    />

            </TabItem>

            <TabItem x:Name="Contrato_ti" Width="200" IsEnabled="{Binding IsEnableTabItemSeguros}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnVeiculoSeguro" Click="OnPendenciaSeguros_Click"
                                Style="{StaticResource MenuStyle}" IsEnabled="{Binding Comportamento.IsEnableEditar}">
                            <StackPanel>
                                <Image
                                    Source="{Binding Pendencia19,Converter={StaticResource ConvertBoolToImage},UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    Width="16" Height="16" />
                            </StackPanel>
                        </Button>
                        <StackPanel Width="170">
                            <TextBlock Text="Seguros" HorizontalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </TabItem.Header>

                <views:VeiculosSegurosView x:Name="EmpresaSeguroUs" Margin="0,0,245,17" Height="474" VerticalAlignment="Bottom"/>

            </TabItem>

            <TabItem x:Name="Anexos_ti" Width="200" IsEnabled="{Binding IsEnableTabItemAnexos}">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="Anexos_bt" Click="OnPendenciaGeralAnexos_Click"
                                Style="{StaticResource MenuStyle}" IsEnabled="{Binding Comportamento.IsEnableEditar}">
                            <StackPanel>
